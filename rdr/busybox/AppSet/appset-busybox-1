apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: busybox-1
  namespace: openshift-gitops
spec:
  generators:
    - clusterDecisionResource:
        configMapRef: acm-placement
        labelSelector:
          matchLabels:
            cluster.open-cluster-management.io/placement: busybox-1-placement
        requeueAfterSeconds: 180
  template:
    metadata:
      name: busybox-1-{{name}}
      labels:
        velero.io/exclude-from-backup: "true"
    spec:
      project: default
      source:
        repoURL: https://github.com/red-hat-storage/ocs-workloads.git
        targetRevision: master
        path: rdr/busybox/app-busybox-1/resources/deployment
      destination:
        namespace: appset-busybox-1
        server: "{{server}}"
      syncPolicy:
        automated:
          selfHeal: true
          prune: true
        syncOptions:
          - CreateNamespace=true
          - PruneLast=true
---
apiVersion: cluster.open-cluster-management.io/v1beta1
kind: Placement
metadata:
  name: busybox-1-placement
  namespace: openshift-gitops
spec:
  predicates:
    - requiredClusterSelector:
        labelSelector:
          matchExpressions:
            - key: name
              operator: In
              values:
                - PLACEHOLDER
